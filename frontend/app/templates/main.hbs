<div id="main">
		<div class="header">
				<img src="logo-top.png" alt="Cant show image">
				<div class="dropdown">
						<button class="dropbtn">Settings</button>
						<div class="dropdown-content">
								<a href="#">Link 1</a>
								<a href="#">Link 2</a>
								{{#if session.isAuthenticated}}
										<a href="#" {{action "invalidateSession"}}>Logout</a>
								{{/if}}
						</div>
				</div>
		</div>
		<div id="mySidebar" class="sidebar">
				{{#if sidebarOpenedRes}}
						<div id="main">
								<img src="arrowClose.png" height="20" width="20" id="closeButton" role="button" alt="Cant show image" class="closebtn" {{action "toggleSidebar"}}>
						</div>
				{{else}}
						<div id="main">
								<img src="arrowOpen.png" height="20" width="20" id="openButton" role="button" alt="Cant show image" class="openbtn" {{action "toggleSidebar"}}>
						</div>
				{{/if}}
				<Contact @model={{this.model.contacts}} @anAction={{action "selectUser"}} />
				<Channel @model={{this.model.channels}} />
		</div>
		<div id="mainView">
				<div class="mainViewScrollDiv" id="mainViewScrollDiv">
						<Chat @model={{this.selectedChat}} @selectedUserId={{this.selectedUserId}} @config={{this.model.config}} @test={{action "test"}} id="chat-scroll-div"/>
				</div>
		</div>
</div>
